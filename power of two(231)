class Solution {
    public static boolean isPowerOfTwo(int n) {
        boolean value = false;
        if (n > 0 && ( (n & (n - 1)) == 0 )) {
            value = true;
        }
        return value;
    }
    public static void main(String[] args){
        int number=16;
        boolean value=isPowerOfTwo(number);
        System.out.println(value);
    }
}
